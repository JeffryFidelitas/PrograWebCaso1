@model Caso1.Core.Models.Usuario

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="auth-logo">
    <a href="@Url.Action("Index","Home")"><img src="~/Template/images/logo/logo.png" alt="Logo"></a>
</div>
<h1 class="auth-title">Iniciar Sesión</h1>
<p class="auth-subtitle mb-5">Ingresa con los datos que registraste anteriormente.</p>

@using (Html.BeginForm("Login", "Usuarios", FormMethod.Post, new { }))
{
    <div class="form-group position-relative has-icon-left mb-4">
        <input asp-for="NombreUsuario" type="text" class="form-control form-control-xl" placeholder="Nombre de Usuario">
        <div class="form-control-icon">
            <i class="bi bi-person"></i>
        </div>
        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
    </div>
    <div class="form-group position-relative has-icon-left mb-4">
        <input asp-for="Contraseña" type="password" class="form-control form-control-xl" placeholder="Contraseña">
        <div class="form-control-icon">
            <i class="bi bi-shield-lock"></i>
        </div>
        <span asp-validation-for="Contraseña" class="text-danger"></span>
    </div>
    @* <div class="form-check form-check-lg d-flex align-items-end"> *@
    @*     <input class="form-check-input me-2" type="checkbox" value="" id="flexCheckDefault"> *@
    @*     <label class="form-check-label text-gray-600" for="flexCheckDefault"> *@
    @*         Mantener sesión iniciada *@
    @*     </label> *@
    @* </div> *@
    <button type="submit" class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Iniciar Sesión</button>
}
<div class="text-center mt-5 text-lg fs-4">
    <p class="text-gray-600">
        ¿No tienes una cuenta? <a href="@Url.Action("Register","Usuarios")"
                                  class="font-bold">
            Regístrate
        </a>.
    </p>
    @* <p><a class="font-bold" href="auth-forgot-password.html">¿Olvidaste tu contraseña?</a>.</p> *@
</div>
