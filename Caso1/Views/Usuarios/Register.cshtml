@model Caso1.Core.Models.Usuario

@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="auth-logo">
    <a href="@Url.Action("Index","Home")"><img src="~/Template/images/logo/logo.png" alt="Logo"></a>
</div>
<h1 class="auth-title">Registro</h1>
<p class="auth-subtitle mb-5">Completa el formulario para crear una cuenta.</p>

@using (Html.BeginForm("Register", "Usuarios", FormMethod.Post, new { }))
{
    <div class="form-group position-relative has-icon-left mb-4">
        <input asp-for="NombreUsuario" type="text" class="form-control form-control-xl" placeholder="Nombre de Usuario">
        <div class="form-control-icon">
            <i class="bi bi-person"></i>
        </div>
        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
    </div>

    <div class="form-group position-relative has-icon-left mb-4">
        <input asp-for="NombreCompleto" type="text" class="form-control form-control-xl" placeholder="Nombre Completo">
        <div class="form-control-icon">
            <i class="bi bi-person"></i>
        </div>
        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
    </div>

    <div class="form-group position-relative has-icon-left mb-4">
        <input asp-for="Correo" type="email" class="form-control form-control-xl" placeholder="Correo Electrónico">
        <div class="form-control-icon">
            <i class="bi bi-envelope"></i>
        </div>
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="form-group position-relative has-icon-left mb-4">
        <input asp-for="Telefono" type="text" class="form-control form-control-xl" placeholder="Teléfono">
        <div class="form-control-icon">
            <i class="bi bi-telephone"></i>
        </div>
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="form-group position-relative has-icon-left mb-4">
        <input asp-for="Contraseña" type="password" class="form-control form-control-xl" placeholder="Contraseña">
        <div class="form-control-icon">
            <i class="bi bi-shield-lock"></i>
        </div>
        <span asp-validation-for="Contraseña" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Registrarse</button>
}
<div class="text-center mt-5 text-lg fs-4">
    <p class="text-gray-600">
        ¿Ya tienes una cuenta? <a href="@Url.Action("Login","Usuarios")"
                                  class="font-bold">
            Inicia Sesión
        </a>.
    </p>
</div>
